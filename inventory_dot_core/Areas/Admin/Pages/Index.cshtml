@page
@model IndexModel
@{
    ViewData["Title"] = "Пользователи";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h2>Список пользователей</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(model => model.UserName, "")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.Email, "")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.Role, "")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
            </td>
        </tr>
    }
    </tbody>
</table>


@model IEnumerable<inventory_dot_core.Models.RelSoftwareHardware>

@{
    ViewData["Title"] = "Список оборудования, на которое установлено ПО";
    Layout = "~/Views/Shared/_Layout_Report.cshtml";
}

@{ int rowNum = 0; }

<table class="table" id="dataTable">
    <thead>
        <tr>
            <th colspan="15">Список оборудования</th>
        </tr>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.RelshWhard.WhardRegion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelshWhard.WhardOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelshWhard.RelHardwareEmployee.RelheEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelshWhard.WhardInumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelshWhard.WhardName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            rowNum++;
        <tr>
            <td>@rowNum</td>
            <td>
                @Html.DisplayFor(modelItem => item.RelshWhard.WhardRegion.RegionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelshWhard.WhardOffice.OfficeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelshWhard.RelHardwareEmployee.RelheEmployee.EmployeeFullFio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelshWhard.WhardInumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelshWhard.WhardName)
            </td>
        </tr>
        }
    </tbody>
</table>

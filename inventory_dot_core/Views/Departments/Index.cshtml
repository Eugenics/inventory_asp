@using inventory_dot_core.Classes
@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.Departments>

@{
    ViewData["Title"] = "Подразделения";
}


<partial name="_FilterPartial" />


<p>
    <partial name="_CreateButton" />
</p>
<div class="d-flex justify-content-center">
    <table class="table table-striped w-auto">
        <thead>
            <tr>
                <th>
                    @Html.SortableHeaderFor(model => model.DepartmentName, "DepartmentName")
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.DepartmentNotes)
                </th>
                <th>
                    @Html.SortableHeaderFor(model => model.DepartmentParent, "DepartmentParent,DepartmentId")
                </th>
                <th>
                    @Html.SortableHeaderFor(model => model.DepartmentRegion, "DepartmentRegion,DepartmentId")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.DepartmentNotes)
                    </td>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.DepartmentParent.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentRegion.RegionName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-info btn-circle btn-sm"
                           asp-route-id="@item.DepartmentId"
                           asp-route-page="@Model.PageIndex"
                           asp-route-filter="@ViewBag.Filter"
                           asp-route-sortExpression="@ViewBag.SortExpression"><i class="fas fa-pencil-alt fa-lg"></i></a> |
                        <a asp-action="Delete" class="btn btn-outline-info btn-circle btn-sm"
                           asp-route-id="@item.DepartmentId"
                           asp-route-page="@Model.PageIndex"
                           asp-route-filter="@ViewBag.Filter"
                           asp-route-sortExpression="@ViewBag.SortExpression"><i class="fas fa-trash-alt fa-lg"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <partial name="_PagerPartial" />
</nav>

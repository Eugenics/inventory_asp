@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.Region>

@{
    ViewData["Title"] = "Регоны";
}

    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <partial name="_FilterPartial" />
    </nav>

<h1>Регионы</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(model => model.RegionName,"RegionName")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RegionId" class="btn btn-outline-primary btn-sm">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.RegionId" class="btn btn-outline-primary btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<nav>
    <partial name="_PagerPartial" />
</nav>

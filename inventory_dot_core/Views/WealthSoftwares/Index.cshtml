@using inventory_dot_core.Classes
@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.WealthSoftware>

@{
    ViewData["Title"] = "Программное обеспечение";
}

<h1>Программное обеспечение</h1>

<p>
    <partial name="_CreateButton" />

    <a asp-action="Report" class="btn btn-mdb-color btn-sm"
       asp-route-page="@Model.PageIndex"
       asp-route-filter="@ViewBag.Filter"
       asp-route-sortExpression="@ViewBag.SortExpression"
       asp-route-filterInv="@ViewBag.filterInv"
       asp-route-filterName="@ViewBag.filterName"
       asp-route-filterRegion="@ViewBag.filterRegion">
        <i class="fas fa-file-alt"></i>
    </a>
</p>

<form class="form-inline form-sm" method="get">
    <input name="filterRegion"
           class="form-control form-control-sm"
           placeholder="Регион"
           aria-label="Search"
           value="@Model.RouteValue["FilterRegion"]">
    <input name="filterInv"
           class="form-control form-control-sm"
           placeholder="Инвентарный номер"
           aria-label="Search"
           value="@Model.RouteValue["FilterInv"]">
    <input name="filterName"
           class="form-control  form-control-sm"
           placeholder="Наименование"
           aria-label="Search"
           value="@Model.RouteValue["FilterName"]">
    <button class="btn btn-mdb-color btn-sm" type="submit"><i class="fas fa-search fa-2x"></i> </button>
</form>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(model => model.WsoftRegion, "WsoftRegion")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WsoftInumber, "WsoftInumber")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WsoftName, "WsoftName")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WsoftDateOfAdoption, "WsoftDateOfAdoption")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WsoftResidualValue, "WsoftResidualValue")
            </th>
            <th hidden>
                @Html.SortableHeaderFor(model => model.WsoftNote, "WsoftNote")
            </th>
            <th hidden>
                @Html.SortableHeaderFor(model => model.WsoftArchiv, "WsoftArchiv")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WsoftCnt, "WsoftCnt")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WsoftCntFree, "WsoftCntFree")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="10%" align="center">
                    @Html.DisplayFor(modelItem => item.WsoftRegion.RegionName)
                </td>
                <td width="10%" align="center">
                    @Html.DisplayFor(modelItem => item.WsoftInumber)
                </td>
                <td width="20%">
                    @Html.DisplayFor(modelItem => item.WsoftName)
                </td>
                <td width="10%">
                    @Html.DisplayFor(modelItem => item.WsoftDateOfAdoption)
                </td>
                <td width="10%">
                    @Html.DisplayFor(modelItem => item.WsoftResidualValue)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.WsoftNote)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.WsoftArchiv)
                </td>
                <td width="10%" align="center">
                    @Html.DisplayFor(modelItem => item.WsoftCnt)
                </td>
                <td width="10%" align="center">
                    @Html.DisplayFor(modelItem => item.WsoftCntFree)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-mdb-color btn-sm"
                       asp-route-id="@item.WsoftId"
                       asp-route-page="@Model.PageIndex"
                       asp-route-filter="@ViewBag.Filter"
                       asp-route-sortExpression="@ViewBag.SortExpression"
                       asp-route-filterInv="@ViewBag.filterInv"
                       asp-route-filterName="@ViewBag.filterName"
                       asp-route-filterRegion="@ViewBag.filterRegion"><i class="fas fa-pencil-alt fa-lg"></i></a> |
                    <a asp-action="Delete" class="btn btn-mdb-color btn-sm"
                       asp-route-id="@item.WsoftId"
                       asp-route-page="@Model.PageIndex"
                       asp-route-filter="@ViewBag.Filter"
                       asp-route-sortExpression="@ViewBag.SortExpression"
                       asp-route-filterInv="@ViewBag.filterInv"
                       asp-route-filterName="@ViewBag.filterName"
                       asp-route-filterRegion="@ViewBag.filterRegion"><i class="fas fa-trash-alt fa-lg"></i></a>
                    <a asp-controller="RelHardwareSoftwares"
                       asp-action="Index" class="btn btn-mdb-color btn-sm"
                       asp-route-soft_id="@item.WsoftId"
                       asp-route-soft_page="@Model.PageIndex"
                       asp-route-soft_filter="@ViewBag.Filter"
                       asp-route-soft_sortExpression="@ViewBag.SortExpression"
                       asp-route-filterInv="@ViewBag.FilterInv"
                       asp-route-filterName="@ViewBag.FilterName"
                       asp-route-filterRegion="@ViewBag.FilterRegion"
                       asp-route-page="1"
                       asp-route-filter=""
                       asp-route-sortExpression=""><i class="fas fa-cloud fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <partial name="_PagerPartial" />
</nav>
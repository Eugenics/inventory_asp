@model  inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.Houses>

    @{
        ViewData["Title"] = "Index";
    }

    <h1>Строения</h1>

    <p>
        <a asp-action="Create" class="btn btn-outline-primary">Создать</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HousesName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HousesRem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HousesRegion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HousesName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HousesRem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HousesRegion.RegionName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.HousesId" class="btn btn-outline-primary btn-sm">Редактировать</a> |
                        <a asp-action="Delete" asp-route-id="@item.HousesId" class="btn btn-outline-primary btn-sm">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <partial name="_PagerPartial" />
    </nav>

@using inventory_dot_core.Classes
@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.RelOfficeResponsEmployee>

@{
    ViewData["Title"] = "Ответственные";
}

    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <partial name="_FilterPartial" />
    </nav>

<h1>Ответственные</h1>

<p>
    <partial name="_CreateButton" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(model => model.RoeOffice.OfficeHouses.HousesRegion.RegionName,"RegionName")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.RoeEmployee,"RoeEmployee")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.RoeOffice,"RoeOffice")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoeOffice.OfficeHouses.HousesRegion.RegionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoeEmployee.EmployeeFullFio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoeOffice.OfficeName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-primary btn-sm"
                   asp-route-id="@item.RoeId"
                   asp-route-page="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression">@Dictionary.frasesDictionary["Edit"]</a> |
                <a asp-action="Delete" class="btn btn-outline-primary btn-sm"
                   asp-route-id="@item.RoeId"
                   asp-route-page="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression">@Dictionary.frasesDictionary["Delete"]</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<nav>
    <partial name="_PagerPartial" />
</nav>

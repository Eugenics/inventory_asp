    <link href="~/chosen_v1.8.7/chosen.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery-3.4.1.min.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>
    <script src="~/fontawesome/js/all.js"></script>
    <script src="~/chosen_v1.8.7/chosen.jquery.js"></script>
    <script src="~/chosen_v1.8.7/docsupport/prism.js"></script>
    <script src="~/chosen_v1.8.7/docsupport/init.js"></script>

    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/moment.js"></script>

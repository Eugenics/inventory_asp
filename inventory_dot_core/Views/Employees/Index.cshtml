@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.Employees>

@{
    ViewData["Title"] = "Сотрудники";
}

<nav class="navbar navbar-expand-md navbar-light bg-light">
    <partial name="_FilterPartial" />
</nav>

<h1>Сотрудники</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary"
       asp-route-page ="@Model.PageIndex"
       asp-route-filter="@ViewBag.Filter"
       asp-route-sortExpression="@ViewBag.SortExpression">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(model => model.EmployeeFullFio, "EmployeeFullFio")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePhoneWork)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.EmployeeRegion, "EmployeeRegion")
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.EmployeePosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeOffice)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.EmployeeIsRespons, "EmployeeIsRespons")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.EmployeeIsMol, "EmployeeIsMol")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeFullFio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePhoneWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeRegion.RegionName)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.EmployeePosition.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeOffice.OfficeName)
            </td>
            <td align="center">
                @{ string isResp = item.EmployeeIsRespons == 1 ? "Да" : "Нет";}
                @isResp
            </td>
            <td align="center">
                @{ string isMol = item.EmployeeIsMol == 1 ? "Да" : "Нет";}
                @isMol
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-primary btn-sm"
                   asp-route-id="@item.EmployeeId"
                   asp-route-page ="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression">Редактировать</a> |
                <a asp-action="Delete" class="btn btn-outline-primary btn-sm"
                   asp-route-id="@item.EmployeeId"                                      
                   asp-route-page ="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<nav>
    <partial name="_PagerPartial" />
</nav>
